username admin privilege 15 password versa123
!
interface Loopback0
 ip address 1.1.1.1 255.255.255.255
 ip ospf 1 area 0
!
interface LISP0
!
interface GigabitEthernet2
 description ms-mr-connection
 ip address 11.11.11.1 255.255.255.0
 ip ospf 1 area 0
 negotiation auto
 no mop enabled
 no mop sysid
!
interface GigabitEthernet3.10
 encapsulation dot1Q 10
 ip address 172.16.10.100 255.255.255.0
 lisp mobility dynamic-eid
!
router lisp
 locator-set RLOC_SET
  1.1.1.1
  exit-locator-set
 !
 service ipv4
  itr map-resolver 3.3.3.3
  itr
  etr map-server 3.3.3.3 key cisco
  etr
  exit-service-ipv4
 !
 instance-id 0
  dynamic-eid dynamic-eid
   database-mapping 172.16.10.0/24 locator-set RLOC_SET
   exit-dynamic-eid
  !
  service ipv4
   eid-table default
   exit-service-ipv4
  !
  exit-instance-id
 !
 exit-router-lisp
!
router ospf 1
 router-id 1.1.1.1
!
line vty 0 4
 login local
 transport input ssh
!
